<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="graduation.project.dongyang.el.ibda.ItemCloth">

    <ImageView
        android:id="@+id/id_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:srcCompat="@drawable/el_logo_png" />

    <TextView
        android:id="@+id/footer_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="장바구니 브랜드"
        app:layout_constraintBottom_toTopOf="@id/footer_price"
        app:layout_constraintStart_toEndOf="@id/id_profile"
        app:layout_constraintTop_toTopOf="@id/id_profile"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/footer_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="50000원"
        app:layout_constraintBottom_toBottomOf="@id/id_profile"
        app:layout_constraintStart_toStartOf="@id/footer_brand"
        app:layout_constraintTop_toBottomOf="@id/footer_brand" />

</androidx.constraintlayout.widget.ConstraintLayout>
