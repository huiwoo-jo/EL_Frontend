<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingHorizontal="20dp"
    android:paddingTop="50dp"
    tools:context="graduation.project.dongyang.el.ibda.activity.Login_QR_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="80dp"
        android:textStyle="bold"
        android:textColor="@color/blue_main"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QR 코드로 로그인"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="@color/blue_main"
        android:textAlignment="center"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="15dp">

        <graduation.project.dongyang.el.ibda.button.SquareImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_main" />
        <ImageView
            android:id="@+id/login_QR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@color/white"/>
    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="IBDA 모바일 앱으로 스캔하여\n로그인하세요."
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/blue_main"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginVertical="10dp"
        android:text="메인화면으로 돌아가기"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/button_ripple_circle_blue"/>

</LinearLayout>