<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="graduation.project.dongyang.el.ibda.activity.SearchActivty">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        android:minHeight="50dp"
        app:titleTextColor="@color/blue_main" >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/app_name"
            android:textColor="@color/blue_main"
            android:textSize="40dp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_ios_50_blue"
            android:background="@color/Transparency"/>
        <EditText
            android:id="@+id/inputId"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="@drawable/button_round_blue"
            android:inputType="text"
            android:hint="상품을 검색해보세요."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"/>

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_search_50_blue"
            android:background="@color/Transparency"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최근 검색어"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/blue_main"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="원피스" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="샌들" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="반팔" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="나시" />
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="블라우스" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="인기 검색어"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/blue_main"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingVertical="10dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="원피스" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="샌들" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="반팔" />

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="나시" />
            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_circle_blue"
                android:textColor="@color/white"
                android:layout_marginHorizontal="5dp"
                android:text="블라우스" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="최근 본 상품"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/blue_main"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_recent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp" />
    </LinearLayout>
</LinearLayout>