<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/button_ripple_round_white"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:id="@+id/tv_bg"
    tools:context=".recyclerItem.ItemCloth">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="6"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:text="No."
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/tv_id"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>


            <ImageView
                android:id="@+id/tv_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="8dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_rowSpan="3"
                app:srcCompat="@drawable/el_logo_png" />

            <TextView
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="1"
                android:text="카테고리"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_category"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_columnSpan="3"
                android:text="상의"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="1"
                android:text="의류 이름"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_columnSpan="3"
                android:text="이름"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:minWidth="80dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="3"
                android:layout_column="1"
                android:text="가격"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnSpan="3"
                android:text="50000원"
                android:textColor="@color/black"
                android:textStyle="bold" />
            <kr.project.dongyang.el.ibda.ibda_admin.button.SquareImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_margin="5dp"
                android:visibility="invisible"
                android:background="@drawable/button_ripple_round_blue"
                android:src="@drawable/ic_baseline_build_24_white"
                android:text="nothing" />

            <kr.project.dongyang.el.ibda.ibda_admin.button.SquareImageButton
                android:id="@+id/btnClothesEdit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="3"
                android:layout_margin="5dp"
                android:background="@drawable/button_ripple_round_blue"
                android:src="@drawable/ic_baseline_build_24_white"
                android:text="의상 수정" />

            <kr.project.dongyang.el.ibda.ibda_admin.button.SquareImageButton
                android:id="@+id/btnClothesDelete"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="4"
                android:layout_margin="5dp"
                android:background="@drawable/button_ripple_round_blue"
                android:src="@drawable/ic_baseline_delete_24_white"
                android:text="의상 삭제" />
        </GridLayout>
</LinearLayout>