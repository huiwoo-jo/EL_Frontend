<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    android:minHeight="300dp"
    android:padding="20dp"
    android:background="@drawable/button_round_blueline_white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="IBDA"
        android:textColor="@color/blue_main"
        android:textStyle="bold"
        android:textSize="50dp"/>
    <TextView
        android:id="@+id/popup_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/popup_clothes_edit"
        android:textColor="@color/blue_main"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_margin="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/popup_btnDone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_ripple_round_blueline_white"
            android:layout_marginHorizontal="5dp"
            android:text="확인"
            android:textColor="@color/blue_main"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/popup_btnCancle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_ripple_round_blue"
            android:layout_marginHorizontal="5dp"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>