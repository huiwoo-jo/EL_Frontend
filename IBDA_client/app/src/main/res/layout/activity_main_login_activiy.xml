<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activity.MainLoginActiviy"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/title_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:paddingVertical="20dp"
        android:layout_gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ibda"
            android:textSize="100dp"
            android:textStyle="bold"
            android:textColor="@color/blue_main"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">
        <!-- 로그인 -->
        <LinearLayout
            android:id="@+id/box_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="25dp"
                android:text="로그인"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:layout_margin="10dp"
                android:background="@drawable/button_ripple_circle_blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnKakao"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="25dp"
                android:text="카카오톡 계정으로 로그인"
                android:drawableLeft="@drawable/ic_kakao_50"
                android:textSize="20dp"
                android:backgroundTint="@color/kakao"
                android:layout_margin="10dp"
                android:background="@drawable/button_ripple_circle_blue"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnEMail"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="25dp"
                android:text="이메일로 로그인"
                android:drawableStart="@drawable/ic_google_50"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_margin="10dp"
                android:background="@drawable/button_ripple_circle_blue"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="회원 가입 | 아이디, 비밀번호 찾기"
            android:textStyle="bold"
            android:textSize="15dp"
            android:padding="10dp"
            android:textColor="@color/blue_main"
            android:textAlignment="center"/>

    </LinearLayout>
</LinearLayout>